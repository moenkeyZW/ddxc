@import '../album/index.wxss';

.album_list {
  width: 100%;
  height: 484rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.albumFm {
  position: relative;
}

.bigImg {
  width: 690rpx;
  height: 388rpx;
  margin: 30rpx 30rpx 0rpx 30rpx;
  border-radius: 10rpx;
}
.yj{
  padding-bottom:18rpx;
  color:#FA7180;
  border-bottom:4rpx solid #FA7180;
  border-bottom-left-radius: 2rpx;
  border-bottom-right-radius: 2rpx;
}

.mf {
  margin: 2rpx 0 0 51rpx;
}

.bt {
  width: 690rpx;
  height: 80rpx;
  background: linear-gradient(rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.6));
  position: absolute;
  bottom: 10rpx;
  left: 30rpx;
  border-radius: 10rpx;
}

.js {
  position: absolute;
  left: 20rpx;
  top: 26rpx;
  width: 585rpx;
  font-size: 28rpx;
  color: #fff;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.bts {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  width: 690rpx;
  height: 80rpx;
  border-radius: 10rpx;
  background: linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0));
}

.more {
  position: absolute;
  top: 20rpx;
  right: 28rpx;
  width: 40rpx;
  height: 40rpx;
}

.smtb {
  width: 36rpx;
  height: 36rpx;
  padding-right: 26rpx;
}

.dialog {
  position: absolute;
  top: 60rpx;
  right: 104rpx;
}

.kuang {
  width: 194rpx;
  height: 182rpx;
}

.dikuang {
  position: relative;
  bottom:16rpx;
}

.zt {
  font-size: 32rpx;
  color: #e5e5e5;
  position: relative;
  top: -6rpx;
}

.cz, .sc, .fx {
  position: absolute;
  left: 26rpx;
}

.cz {
  top: 14rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.5);
}

.sc {
  bottom: 70rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.5);
}

.fx {
  bottom: 18rpx;
}

.fxBt[plain] {
  border: none;
}

.fxBt {
  padding: 0;
  height: 60rpx;
  border-radius: 0;
}

.hide {
  display: none;
}

.show {
  display: block;
}
